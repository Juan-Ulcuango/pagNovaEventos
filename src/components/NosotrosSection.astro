<section
  class="bg-gray-200 py-8 antialiased dark:bg-neutral-900 md:py-8"
  id="sobreNosotros"
>
<div class="mx-auto max-w-screen-xl 2xl:px-0">
    <div class="flex justify-center pb-14">
      <div class="w-full h-72 md:w-[400px] overflow-hidden bg-gray-100 dark:bg-neutral-700 rounded-lg flex items-center justify-center relative"> 
        <img 
          src="/cumpleanios/cumple1.webp" 
          alt="Decoración de eventos" 
          class="absolute w-full h-full object-cover" 
          loading="lazy"
        />
      </div>
