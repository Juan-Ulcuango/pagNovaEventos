---

interface Props {
  href?: string;
  title?: string;
  variant?: 'default' | 'outline' | 'minimal';
  imageUrl?: string;  
  imageAlt?: string;  
}

const { 
  href = '#', 
  title = 'Card Category', 
  variant = 'default', 
  imageUrl = '',       
  imageAlt = title    
} = Astro.props;

---

<a 
  href={href}
  class={`
    flex flex-col items-center transition-all duration-200 text-center
    ${variant === 'default' ? 
      'rounded-lg border border-neutral-200 bg-white px-4 py-4 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700' : 
      variant === 'outline' ? 
      'rounded-lg border-2 border-blue-500 bg-transparent px-4 py-4 hover:bg-blue-50 dark:border-blue-400 dark:hover:bg-blue-900/20' :
      'rounded-lg px-4 py-4 hover:bg-neutral-100 dark:hover:bg-neutral-700'
    }
  `}
>
  {/* Contenedor de imagen (arriba) */}
  {imageUrl && (
    <div class="mb-3 h-40 w-40 rounded-full overflow-hidden bg-neutral-100 dark:bg-neutral-700">
      <img 
        src={imageUrl} 
        alt={imageAlt}
        class="h-full w-full object-cover"
        width="64"
        height="64"
        loading="lazy"
      />
    </div>
  )}
  
  {/* Texto (abajo) */}
  <span class="text-sm font-medium text-neutral-900 dark:text-white">
    {title}
  </span>
</a>