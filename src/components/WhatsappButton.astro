---
const { phoneNumber, message } = Astro.props;
const validatedNumber = phoneNumber.replace(/[^\d+]/g, '');
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
import WhatsAppIcon from '../icons/whatsapp-icon.astro'; 

---

<div class="fixed bottom-5 right-5 z-50 md:bottom-10 md:right-10 rounded-full shadow-lg bg-black">
  <a
    href={whatsappLink}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Contactar por WhatsApp"
    class="flex items-center justify-center w-14 h-14 bg-green-500 rounded-full shadow-md hover:bg-green-600 active:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-1 transform hover:scale-105 transition-transform duration-200 md:w-16 md:h-16"
  >
    <WhatsAppIcon class="w-8 h-8 md:w-10 md:h-10 text-white dark:text-black" />
  </a>
</div>